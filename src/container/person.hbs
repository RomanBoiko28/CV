{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

    <header>
        {{#with person}}
            <h1>{{name}}</h1>
            <p><b>Age:</b> {{age}}</p>
            <p><em>{{gender}}</em></p>
            <address>
                    {{#each address}}
                    {{this}}
                    {{/each}}
            </address>
            <br>
            <hr>
        {{/with}}
    </header>

    <main>
        {{#with person}}
                {{> title data="Education:" big=true}}
                {{#each education}}
                    <p><b>Degree</b> - {{degree}}</p>
                    <p><b>Major</b> - {{major}}</p>
                    <p><b>University</b> - {{university}}</p>
                    <p><b>Graduation Year</b> - {{graduationYear}}</p>
                {{/each}}

            <hr><br>
            
                {{> title data="Work Experience:" big=true}}
                {{#each workExperience}}
                    <p><b>Company</b>: {{company}}</p>
                    <p><b>Duration</b>: {{startDate}} to {{endDate}}</p>
                    <p><b>Responsibilities</b>: </p>
                    <ul>
                        {{#each responsibilities}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ul>
                    <p><b>Year founded</b>: {{year_founded}}</p>
                    <p><b>Industry</b>: {{industry}}</p>
                    <br>

                    {{> title data="Employees:"}}
                    <ul>
                        {{#each employees}}
                        <li>
                            <p><b>Name</b>: {{name}}</p>
                            <p><b>Position</b>: {{position}}</p>
                            <p><b>Department</b>: {{department}}</p>
                            <br>

                            {{> title data="Projects:"}}
                            <ul>
                                {{#each projects}}
                                <li>
                                    <p><b>name</b>: {{name}}</p>
                                    <p><b>Description: </b>{{description}}</p>
                                    <p><b>Status</b>: {{status}}</p>
                                    {{> title data="Team: "}}
                                    <ul>
                                        {{#each teams}}
                                        <li>
                                            <p><b>Team name: </b>"{{team_name}}"</p>
                                            {{#with team_leader}}
                                                <p> {{name}} ({{title}})</p>
                                                <p><a href="john.smith@example.com">{{email}}</a></p>
                                            {{/with}}
                                                {{> title data="Members:"}}
                                                <ul>
                                                {{#each team_members}}
                                                    <li>
                                                        <p>{{name}} ({{title}})</p>
                                                        <a href="alice.johnson@example.com">{{email}}</a>
                                                        <p><b>skills: </b>{{skills}} </p>
                                                            {{> title data="Projects:"}}
                                                            <ul>
                                                            {{#each projects}}
                                                                <li>
                                                                    <p><b>Team: </b>"{{name}}"</p>
                                                                    <p><b>description: </b><q>{{description}}</q></p>
                                                                    <p><b>technologies: </b>{{technologies}}</p>
                                                                    {{> title data='Team members:'}}
                                                                    <ul>
                                                                    {{#each team_members}}
                                                                        <li>
                                                                            <p>{{name}} ({{title}})</p>
                                                                        </li>
                                                                    {{/each}}
                                                                    </ul>
                                                                </li>
                                                            {{/each}}
                                                            </ul>
                                                    </li>
                                                {{/each}}
                                                </ul>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </li>
                                {{/each}}
                            </ul>
                        </li>
                        {{/each}} 
                    </ul>                             
                {{/each}}
        {{/with}}
    </main>

