{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
{{#with main}}
  <main>
    <section>
      {{> title data="Work history" big=true}}
      <div>
        <p>
          <ul>
          {{#each works}}
            <li>
              <div>{{position}}</div>

              <br>

              <div>
                {{duration.from}} -
                {{#if duration.to}}
                    {{duration.to}} 
                {{else}} 
                  (still working on) 
                {{/if}}
              </div>

              <br>

              <div>{{> link text=company.name href=company.url blank=true noLine=true}}</div>

              <br>

              <div>
                 <strong>Projects ({{projectAmount}})</strong>
              </div>

              <br>

              <ul>
                {{#each projects}}
                <li>
                <div><p>{{about}}</p></div>
                <br>
                <div><em>Projects stacks</em></div>
                <br>
                {{#each stacks}} <p>{{name}}</p>{{/each}}
                 <p>stackAmount - ({{stackAmount}})</p>
                 <br>
                 <br>
                 <div><em>Projects awards</em></div>
                <br>
                {{#each awards}} <p>{{name}}</p>{{/each}}
                <div>{{> link text=name href=url blank=true noLine=true}}</div>
                 <p>awardAmount - ({{awardAmount}})</p>
                </li>
                {{/each}}

              </ul>
            </li>
          {{/each}}
          </ul>
        </p>
      </div>
    </section>
  </main>
{{/with}}

</div>

